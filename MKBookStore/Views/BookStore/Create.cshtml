@model Models.Book

@{
    ViewData["Title"] = "Create";
}
@{
    var text = "Create";

    if (Model.BookId > 0)
    {
        text = "Update";
    }
}

<h1>@text</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="BookId" id="BookId" type="hidden" class="form-control" />

                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDetails.Description" class="control-label"></label>
                <input asp-for="BookDetails.Description" class="form-control" />
                <span asp-validation-for="BookDetails.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDetails.Genre" class="control-label"></label>
                <input asp-for="BookDetails.Genre" class="form-control" />
                <span asp-validation-for="BookDetails.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDetails.Publisher" class="control-label"></label>
                <input asp-for="BookDetails.BookDetailId" type="hidden" class="form-control"/>
                <input asp-for="BookDetails.BookId" type="hidden" class="form-control"/>
                <input asp-for="BookDetails.Publisher" class="form-control" />
                <span asp-validation-for="BookDetails.Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="Create" value="@text" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
